{
  "model_parameters": {
    "tfidf": {
      "max_features": 10000,
      "ngram_range": [1, 3],
      "min_df": 2,
      "max_df": 0.95,
      "stop_words": "english",
      "lowercase": true,
      "sublinear_tf": true
    },
    "intent_classifier": {
      "n_estimators": 100,
      "max_depth": 10,
      "random_state": 42
    },
    "response_matcher": {
      "max_iter": 1000,
      "random_state": 42
    }
  },
  "preprocessing": {
    "remove_urls": true,
    "remove_emails": true,
    "remove_special_chars": true,
    "use_stemming": true,
    "remove_stopwords": true,
    "min_token_length": 2
  },
  "training": {
    "test_size": 0.2,
    "validation_size": 0.1,
    "random_state": 42,
    "shuffle": true
  },
  "response_generation": {
    "similarity_threshold": 0.1,
    "intent_weight": 0.3,
    "similarity_weight": 0.7,
    "top_k_responses": 3
  }
}
